{
  "name": "electron-kook",
  "version": "1.1.0",
  "description": "A minimal Electron application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:macOS": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-forge publish",
    "release": "electron-builder --mac --windows --publish always",
    "electron": "electron",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "repository": "github:rootphantomer/electron-kook",
  "keywords": [
    "Electron",
    "kook",
    "开黑啦"
  ],
  "author": "ph4nt0mer",
  "license": "MIT",
  "build": {
    "productName": "electron-kook",
    "appId": "rootphantomer.electron.kook",
    "copyright": "electron-kook",
    "files": [
      "!dist/**/*"
    ],
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/binary.html?path=electron/  "
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "授权访问麦克风",
        "NSCameraUsageDescription": "授权访问摄像头"
      }
    },
    "extends": null
  },
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@rootphantomer/electron-kook",
          "config": {
            "repository": {
              "owner": "rootphantomer",
              "name": "electron-kook"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0",
    "@electron-forge/maker-deb": "^6.0.0",
    "@electron-forge/maker-rpm": "^6.0.0",
    "@electron-forge/maker-squirrel": "^6.0.0",
    "@electron-forge/maker-zip": "^6.0.0",
    "@electron-forge/publisher-github": "^6.0.0",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "resolutions": {
    "upath": "^1.0.5"
  }
}
